@model AWDAdmin.Models.Pessoa

@{
    ViewBag.Title = "Delete";
    Layout = null;
}



<div class="modal-dialog modal-lg">
    <div class="modal-content">
        @using (Ajax.BeginForm("Delete", "Pessoas",
            new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "resultado", LoadingElementId = "loading", OnSuccess = "$.validator.unobtrusive.parse('form');" }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Confirmar a remoção o registro?</h4>
            </div>
             
            @Html.AntiForgeryToken()
 
            <div class="modal-body">

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <p>
                        @Html.DisplayNameFor(model => model.Nome)
                    </p>

                    <p>
                        @Html.DisplayFor(model => model.Nome)
                    </p>
                    <div class="warning">
                        <div id="loading" style="display:none">
                            <img src="~/Content/default.svg" />
                        </div>
                        @ViewBag.Mensagem
                    </div>
                    <div id="resultado">

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                    <input type="submit" value="Confirmar" class="btn btn-primary" />

                <input type="button" value="Fechar" class="btn btn-default" data-dismiss="modal" />
            </div>
        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
