@model IEnumerable<AWDAdmin.Models.Noticia>

@{
    ViewBag.Title = "Notícias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Nova+", "Create", null, new  {@class="btn btn-primary" })
</p>
<table class="table" id="dataTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resumo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Texto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publicado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resumo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publicado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                <button class="btn btn-primary detail" data-id="@item.Id" data-controller="Noticias"><i class="glyphicon glyphicon-eye-open"></i></button>
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


<div class="modal" id="modalNoticias">

</div>