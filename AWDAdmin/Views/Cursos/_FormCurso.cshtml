@model AWDAdmin.Models.Curso
<div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#curso" aria-controls="home" role="tab" data-toggle="tab">Curso</a></li>
        @{
            if (Model!=null && Model.ID != null)
            {
                <li role="presentation"><a href="#modulos" aria-controls="modulos" data-dest="modulos" role="tab" data-curso="@Model.ID" data-toggle="tab">Módulos</a></li>
                <li role="presentation"><a href="#disciplinas" aria-controls="disciplinas" data-dest="disciplinas" role="tab" data-curso="@Model.ID" data-toggle="tab">Disciplinas</a></li>
            }
        }
        
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="curso">
            <div class="row">

                <div class="form-group">
                    @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control edittinymce", @rows = "5", @cols = "10" })
                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ementa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Ementa, new { @class = "form-control edittinymce", @rows = "5", @cols = "10" })
                        @Html.ValidationMessageFor(model => model.Ementa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CargaHoraria, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.CargaHoraria, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CargaHoraria, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Professor_Id, "Professor", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.DropDownList("Professor_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Professor_Id, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Coordenador_Id, "Coordenador", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.DropDownList("Coordenador_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Coordenador_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Vagas, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Vagas, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Vagas, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.DataInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.DataInicio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataInicio, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.DataConclusao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.DataConclusao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataConclusao, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    
                    @Html.LabelFor(model => model.Horario, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Horario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Horario, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.InicioInscricao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.InicioInscricao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.InicioInscricao, "", new { @class = "text-danger" })
                    </div>
                
                    @Html.LabelFor(model => model.FimInscricao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.FimInscricao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FimInscricao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Local, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Local, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Local, "", new { @class = "text-danger" })
                    </div>
                
                    @Html.LabelFor(model => model.Investimento, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Investimento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Investimento, "", new { @class = "text-danger" })
                    </div>
                
                    @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Capa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-lg-6">
                        <div class="input-group">
                            @Html.EditorFor(model => model.Capa, new { htmlAttributes = new { @class = "form-control capa", @id = "capa" } })

                            <span class="input-group-btn">
                                <button class="btn btn-default FileBrowserCapa" type="button"><i class="fa fa-download"></i></button>
                            </span>
                        </div><!-- /input-group -->
                    </div><!-- /.col-lg-6 -->

                    <script>
                        function fnCapa(fileurl) {
                            $('.capa').val(fileurl);
                        };

                        $(function () {
                            // Button click event
                            $('.FileBrowserCapa').on('click', function (e) {
                                e.preventDefault();
                                var top = window.screenTop + 50;
                                var left = window.screenLeft + 50;
                                window.open('/Admin/FileBrowser/FileBrowser.aspx?caller=opener&fn=fnCapa&langCode=pt', 'fileBrowser', 'top=' + top + ',left=' + left + ',menubar=0,scrollbars=0,toolbar=0,height=550,width=700');
                            })
                        });

                    </script>
                </div>


            </div>

        </div>
        @{
            if (Model != null && Model.ID != null)
            {
        <div role="tabpanel" class="tab-pane" id="modulos">
            
        </div>
        <div role="tabpanel" class="tab-pane" id="disciplinas">
            
        </div>
            }
        
        }
    </div>

</div>

<div class="warning">
    <div id="loading" style="display:none">
        <img src="~/Content/default.svg" />
    </div>

    @ViewBag.Mensagem
</div>
