@model IEnumerable<AWDAdmin.Models.Pessoa>

@{
    ViewBag.Title = "Pessoas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

            <div class="panel-body">
                <div class="padBottom">

                    <button class="btn btn-success new" data-controller="Pessoas">Novo <i class="glyphicon glyphicon-new-window"></i> </button>

                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover table-responsive" id="dataTable">

                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    Celular
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CPF)
                                </th>
                                
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Celular)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CPF)
                                    </td>
                                    
                                    <td>
                                        <button class="btn btn-danger delete" data-id="@item.Id" data-controller="Pessoas"><i class="glyphicon glyphicon-trash"></i></button>
                                        <button class="btn btn-primary edit" data-id="@item.Id" data-controller="Pessoas"><i class="glyphicon glyphicon-edit"></i></button>
                                        <button class="btn btn-primary edit" data-id="@item.Id" data-controller="Coordenadors">
                                            <i class="glyphicon glyphicon-user"></i>
                                        </button>
                                        <button class="btn btn-primary edit" data-id="@item.Id" data-controller="Professors">
                                            <i class="glyphicon glyphicon-book"></i>
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
                </div>


<div class="modal" id="modalPessoas">

</div>