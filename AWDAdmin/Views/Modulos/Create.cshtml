@model AWDAdmin.Models.Modulo

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        @using (Ajax.BeginForm("Create", "Modulos", new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "modalModulos",
            LoadingElementId = "loadingModulos",
            OnSuccess = "$.validator.unobtrusive.parse('form');"
        }))
        {
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Novo Módulo curso @ViewBag.Curso.Titulo</h4>
    </div>
             
    @Html.AntiForgeryToken()
 
    <div class="modal-body">

        <div class="form-horizontal">
            <input name="Curso_Id" value="@ViewBag.Curso.ID" type="hidden" />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="warning">
                <div id="loadingModulos" style="display:none">
                    <img src="~/Content/default.svg" />
                </div>

                @ViewBag.Mensagem
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="Criar" class="btn btn-primary" />
        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
    </div>
        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
