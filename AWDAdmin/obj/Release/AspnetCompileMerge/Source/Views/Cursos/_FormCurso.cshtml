    <div class="form-group">
        @Html.LabelFor(model => model.Capa, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Capa, new { htmlAttributes = new { @class = "form-control capa", @id = "capa" } })
            <span class="input-group-btn">
                <button class="btn btn-default FileBrowserCapa" type="button">
                    <i class="fa fa-download"></i>
                </button>
            </span>
            @Html.ValidationMessageFor(model => model.Capa, "", new { @class = "text-danger" })
        </div>
        <script>
            function fnCapa(fileurl) {
                $('.capa').val(fileurl);
            };

            $(function () {
                // Button click event
                $('.FileBrowserCapa').on('click', function (e) {
                    e.preventDefault();
                    var top = window.screenTop + 50;
                    var left = window.screenLeft + 50;
                    window.open('/Admin/FileBrowser/FileBrowser.aspx?caller=opener&fn=fnCapa&langCode=pt', 'fileBrowser', 'top=' + top + ',left=' + left + ',menubar=0,scrollbars=0,toolbar=0,height=550,width=700');
                })
            });

        </script>
    </div>

