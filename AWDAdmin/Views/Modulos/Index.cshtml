@model IEnumerable<AWDAdmin.Models.Modulo>

@{
    Layout = null;
}

<p>
    <button class="btn btn-success new" type="button" data-controller="Modulos" data-param="curso=@ViewBag.curso.ID"> Novo <i class="glyphicon glyphicon-new-window"></i> </button>

</p>
<div class="panel">
    <div class="page-header">
        Módulos para o curso @ViewBag.curso.Titulo
    </div>
</div> 
<table class="table table-striped table-bordered table-hover table-responsive" id="dataTableModulos">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>

</table>

